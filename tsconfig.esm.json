{
  "compilerOptions": {
    "target": "ES2020",
  "module": "ES2022",
  "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
