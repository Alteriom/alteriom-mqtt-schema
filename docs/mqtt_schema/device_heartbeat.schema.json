{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.alteriom.io/mqtt/v1/device_heartbeat.schema.json",
  "title": "Unified Device Heartbeat v1",
  "description": "Unified presence and health check message for all device types. Code 102. Replaces sensor_heartbeat (201) and gateway_heartbeat (303) for new deployments.",
  "allOf": [
    { "$ref": "envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "message_type": {
          "const": 102,
          "description": "Unified device heartbeat message type"
        },
        "device_type": {
          "type": "string",
          "enum": ["sensor", "gateway", "bridge", "hybrid"],
          "description": "Device type - supports all device roles"
        },
        "device_role": {
          "type": "string",
          "enum": ["sensor", "gateway", "bridge", "hybrid"],
          "description": "Primary device role - may differ from device_type for hybrid deployments"
        },
        "uptime_s": {
          "type": "number",
          "minimum": 0,
          "description": "Device uptime in seconds since last boot"
        },
        "connected_devices": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of connected devices (for gateways/bridges)"
        },
        "mesh_nodes": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of mesh nodes in network (for mesh-enabled devices)"
        },
        "status_summary": {
          "type": "string",
          "enum": ["healthy", "degraded", "critical", "maintenance"],
          "description": "Overall device health status"
        },
        "battery_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Battery level percentage (0-100) for battery-powered devices"
        },
        "signal_strength": {
          "type": "number",
          "minimum": -200,
          "maximum": 0,
          "description": "WiFi/network signal strength in dBm"
        }
      },
      "required": ["device_type"],
      "additionalProperties": true
    }
  ]
}
